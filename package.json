{
  "name": "vs_gesture",
  "version": "1.0.0",
  "description": "Gesture.js uniformizes pointer and gesture inputs across mobile and desktop browsers.",
  "main": "./lib/vs_gesture.js",
  "module": "es/vs_gesture.js",
  "jsnext:main": "es/vs_gesture.js",
  "repository": "git@github.com:dthevenin/Gesture.git",
  "author": "<david.thevenin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:all": "rollup -c rollup.config.js",
    "build:amd:min": "uglifyjs --compress --mangle -o lib/vs_gesture.min.js -- lib/vs_gesture.js",
    "build:iief:min": "uglifyjs --compress --mangle -o dist/vs_gesture.min.js -- dist/vs_gesture.js",
    "build:es:min": "uglifyjs --compress --mangle -o es/vs_gesture.min.js -- es/vs_gesture.js",
    "build": "npm run build:all && npm run build:amd:min && npm run build:iief:min && npm run build:es:min",
    "clean": "rimraf lib es dist",
    "prepublish": "npm run clean && npm run build"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [],
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "files": [
    "dist",
    "lib",
    "src",
    "es"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^4.0.1",
    "rollup": "^0.53.1",
    "uglify-es": "^3.3.2"
  },
  "dependencies": {
    "vs_utils": "https://github.com/dthevenin/Util.git"
  }
}
