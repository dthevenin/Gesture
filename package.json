{
  "name": "vs_gesture",
  "version": "1.0.0",
  "description": "Gesture.js uniformizes pointer and gesture inputs across mobile and desktop browsers.",
  "main": "./lib/vs_gesture.js",
  "module": "es/gesture.js",
  "jsnext:main": "es/gesture.js",
  "repository": "git@github.com:dthevenin/Gesture.git",
  "author": "<david.thevenin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:es": "BABEL_ENV=es babel src --out-dir es",
    "build:amd": "rollup -c -o ./lib/vs_gesture.js",
    "build:amd:min": "uglifyjs --compress --mangle -o lib/vs_gesture.min.js -- lib/vs_gesture.js",
    "build": "npm run build:amd && npm run build:amd:min && npm run build:es",
    "clean": "rimraf lib es",
    "prepublish": "npm run clean && npm run build"
  },
  "files": [
    "lib",
    "src",
    "es"
  ],
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^7.1.1",
    "babel-plugin-check-es2015-constants": "^6.3.13",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^8.0.0",
    "rollup": "^0.41.6",
    "uglify-es": "^3.3.2"
  },
  "dependencies": {
    "vs_utils": "https://github.com/dthevenin/Util.git"
  }
}
